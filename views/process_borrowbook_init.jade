extends layout
block content
    div(id="page-container", class="AppContent main-wrapper container")
        include ./includes/navbar.jade
        
        //book :book, borrower: user, userId: ownerUserId

        -if(process == 1) {
            div( class="row clearfix")
                div( class="col-md-12 column")
                    div( class="row clearfix")
                        div( class="col-md-6 column")
                            div( class="row clearfix")
                                div( class="col-md-8 column")
                                    div(class="row clearfix")
                                        div(class="col-md-12 column")
                                            h3 #{borrower.name}
                                div( class="col-md-4 column")
                                    div(class="row clearfix")
                                        div(class="col-md-12 column")
                                            img(src="#{borrower.profileImageUrl}", class="mainImage")
                        div( class="col-md-6 column")
                            div( class="row clearfix")
                                div( class="col-md-4 column")
                                    div(class="row clearfix")
                                        div(class="col-md-12 column mainImage")
                                            img(src="#{book.imageUrl}")
                                div( class="col-md-8 column")
                                    div(class="row clearfix")
                                        div(class="col-md-12 column")
                                            h3 #{book.name}

                    div( class="row clearfix")
                        div( class="col-md-12 column")
                            form(class="form-horizontal",role="form", action="/process/borrowInit/accept", method="POST", id="borrowAcceptForm")
                                input(type="hidden", value="#{borrowerId}", name="borrowerId")
                                input(type="hidden", value="#{ownerUserId}", name="ownerId")
                                input(type="hidden", value="#{book.id}", name="bookId")

                                div( class="form-group")
                                    label(for="comment") Comment:
                                    textarea(class="form-control", rows="5", id="comment", form="borrowAcceptForm", name="comment")
                                div( class="form-group")
                                    div( class="col-sm-offset-2 col-sm-10")
                                        div(class="radio")
                                            label
                                                input(type="radio", name="shareContact", value="0", checked="1")
                                                |Share email and phone no.
                                        div(class="radio")
                                            label
                                                input(type="radio", name="shareContact", value="1")
                                                |Share only email
                                div( class="form-group")
                                    div( class="col-sm-offset-2 col-sm-10")
                                        button(type="submit",class="btn btn-default") Accept
        - } else {
            div( class="row clearfix")
                div( class="col-md-12 column")
                    h3 you sent your approval..
        -}    