div(class="Grid-cell u-mb10")
    div(class="js-stream-item")
        div(class="ProfileCard js-actionable-user")
            a(class="ProfileCard-bg js-nav", href="#")
            div(class="ProfileCard-content")
                a(class="ProfileCard-avatarLink js-nav js-tooltip", href="#")
                    img(class="ProfileCard-avatarImage js-action-profile-avatar", src="#{user.profileImageUrl}", style="width:100px; height:100px;")
                div(class="ProfileCard-userFields")
                    div(class="ProfileNameTruncated")
                        div(class="u-textTruncate u-inlineBlock")
                            a(class="ProfileNameTruncated-link u-textInheritColor", href="#") #{user.name}